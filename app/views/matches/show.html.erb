
<table>
  <tr>
    <td></td>
    <td><%= render "team_names", :team => @match.teams.first %> vs. </td>
    <td><%= render "team_names", :team => @match.teams.last %></td>
  </tr>
  <% @match.games.each_with_index do |game, index| %>
    <tr>
      <td>Game <%= index + 1 %></td>
      <td><%= game.team_1_score %></td>
      <td><%= game.team_2_score %></td>
    </tr>
  <% end %>
</table>

<% if @winning_team %>
  <p>winner: <%= render "team_names", :team => @winning_team %></p>
<% end %>
